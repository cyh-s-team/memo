<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoodsdetailActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_goodsdetail_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/Juice"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/iv_goodsdetail_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_arrowleft_white_foreground"
            android:layout_marginLeft="5dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_goodsdetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日记分享"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_goodsdetail_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_gdetail_headphoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/moren_headphoto"
                    android:layout_margin="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_detail_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="日记发布人"
                        android:textColor="@color/Black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_gdetail_repu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="旅游"
                        android:textSize="10sp"
                        android:textColor="@color/btn_answer_normal"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/repu_lable_bg"
                        android:padding="2dp"/>

                    <ImageView
                        android:id="@+id/iv_gdetail_call"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:clickable="true"
                        android:src="@drawable/add" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hui"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_gdetail_gname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长青山游记"
                        android:textSize="18sp"
                        android:textColor="@color/Black"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/iv_gdetail_collect"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/add1"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_detail_hownew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="说走就走的旅行，要么缘由幸福稳定和宽裕，要么祸起无力无奈和逃避。在旅途中，我遇见了你，你我相识是缘分！看着你手中的戒指，你说，你可以把它取下来吗？当我要取的时候，你淘气的躲开了，你说只有有缘人才可以取下，我看着你手中的戒指，想做你的有缘人，可是我知道结果是惨淡的，但还是心存希望"
                        android:textSize="15sp"
                        android:textColor="@color/Black"
                        android:layout_toLeftOf="@+id/tv_detail_getway"
                        android:layout_marginRight="10dp"
                        android:padding="30dp"
                        android:background="@color/colorWhite"/>
                    android:layout_centerVertical="true"


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_gdetail_gdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_gdetail_gimage"
                    android:layout_width="320dp"
                    android:layout_height="400dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:padding="2dp"
                    android:maxHeight="20dp"
                    android:maxWidth="10dp"
                    android:src="@drawable/background1"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_detail_location"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_location_foreground"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_detail_pub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布于"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_detail_location"/>

                <TextView
                    android:id="@+id/tv_detail_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_detail_pub"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浏览 "
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toLeftOf="@+id/tv_detail_number"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_detail_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/hui"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_comments"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部评论"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_blackdot_foreground"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/tv_gdetail_pnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/hui"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_gravity="top"
                    android:textStyle="bold"/>

                <ListView
                    android:id="@+id/lv_detail_comments"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@color/hui" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/ll_detail_chat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_detail_chat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_chat"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/et_gdetail_input"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/ll_detail_chat"
            android:layout_toLeftOf="@+id/ll_detail_button"
            android:background="@drawable/edittext_seach"
            android:layout_centerVertical="true"
            android:hint="留言问问更多细节吧~"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15sp"
            android:maxLength="300"/>

        <LinearLayout
            android:id="@+id/ll_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gdetail_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:background="@color/yellow"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_gdetail_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:background="@color/colorRed"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:clickable="true"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>